@model Assignment1.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register";
}


<div class="row">
    <div class="col-xs-5">
        <div class="panel panel-border-color">
            <div class="panel-heading">
                <h2>Register</h2>
            </div>
            <div class="panel-body">
                <form asp-controller="Home" asp-action="RegisterAction">
                    <table>
                        <tbody>
                            <tr>
                                <td><label for="UserType">User Type:</label></td>
                            </tr>
                            <tr>
                                <td>
                                    <select asp-for="RoleId" name="RoleId">
                                        <option value="1">General User</option>
                                        <option value="2">Blog Poster</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td><label for="FirstName">First Name:</label></td>
                            </tr>
                            <tr>
                                <td><input type="text" name="FirstName" asp-for="FirstName" /></td>
                            </tr>
                            <tr>
                                <td><label for="LastName">Last Name:</label></td>
                            </tr>
                            <tr>
                                <td><input type="text" name="LastName" asp-for="LastName" /></td>
                            </tr>
                            <tr>
                                <td><label for="EmailAddress">Email Address:</label></td>
                            </tr>
                            <tr>
                                <td><input type="email" name="EmailAddress" asp-for="EmailAddress" /></td>
                            </tr>
                            <tr>
                                <td><label for="Password">Password:</label></td>
                            </tr>
                            <tr>
                                <td><input type="password" name="Password" asp-for="Password" /></td>
                            </tr>
                            <tr>
                                <td><input class="btn" type="submit" value="Register" /></td>
                            </tr>
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>